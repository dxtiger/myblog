extends layout

block main
	form(action='/add',method='post')
		div.form-group
			label 编辑文章
			input(type='text',name='title',class='form-control',placeholder='标题',value="#{title}")
			input(type='hidden',name='gid',value='#{_id}')
		div.form-group
			textarea(class='form-control',name='content',rows='18') #{content}
		div.form-group
			label 标签
			input(type='text',name='tag',class='form-control',placeholder='标签',value="#{tags}")
		div.form-group
			button(type='submit',class='btn btn-default') 提交
			p.help-block