extends ./layout

block main
	form(action='/register',method='post')
		div.form-group
			label 用户名
			input(type='text',name='name',class='form-control',placeholder='用户名',value="#{name}")
		div.form-group
			label 邮箱
			input(type='text',name='email',class='form-control',placeholder='邮箱',value="#{email}")
		div.form-group
			label 密码
			input(type='password',name='password',class='form-control')
		div.form-group
			label 确认密码
			input(type='password',name='repassword',class='form-control')
		div.form-group
			button(type='submit',class='btn btn-default') 提交
			p.help-block #{message}